{
  "name": "xslt3-ts",
  "version": "1.0.0",
  "description": "Typescript command/control for XSLT (and related) filters, pipelines, validators etc.",
  "main": "lib/index.js",
  "author": "NIST OSCAL Team",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^14.14.45",
    "nodemon": "^2.0.4",
    "ts-node": "^9.0.0",
    "typescript": "^4.2.4",
    "xslt3": "^2.2.0"
  },
  "dependencies": {
    "commander": "^5.1.0",
    "saxon-js": "^2.2.0"
  },
  "nodemonConfig": {
    "watch": "src/**/*.ts",
    "execMap": {
      "ts": "ts-node"
    },
    "scripts": {
      "start": "nodemon src/index.ts",
      "build": "tsc -p .",
      "refresh": "rm -rf ./node_modules ./package-lock.json && npm install",
      "make-sef": "xslt3 -t -xsl:hello.xsl -export:hello.sef.json -nogo"
    }
  }
}
